<?xml version="1.0"?>
<phpunit bootstrap="tests/bootstrap.php" colors="false" backupGlobals="false" backupStaticAttributes="false">
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite>
            <directory>tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>
